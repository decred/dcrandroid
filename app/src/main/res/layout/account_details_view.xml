<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_account_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:visibility="gone"
    tools:showIn="@layout/account_list_row"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/account_staking_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:textColor="@color/darkBlueTextColor"
            android:textSize="18sp"
            app:fontFamily="@font/source_sans_pro_regular_family" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_immature_rewards_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_immature_rewards"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="16sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />

            <TextView
                android:id="@+id/tv_immature_rewards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="19sp"
                app:fontFamily="@font/source_sans_pro_regular_family"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_locked_by_tickets_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_locked_by_tickets"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="16sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />

            <TextView
                android:id="@+id/tv_locked_by_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="19sp"
                app:fontFamily="@font/source_sans_pro_regular_family"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_voting_authority_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_voting_authority"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="16sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />

            <TextView
                android:id="@+id/tv_voting_authority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="19sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_immature_stake_generation_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/immature_stake_generation"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="16sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />

            <TextView
                android:id="@+id/tv_immature_stake_generation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="19sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightGray" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_properties"
        android:textColor="@color/darkBlueTextColor"
        android:textSize="18sp"
        app:fontFamily="@font/source_sans_pro_regular_family" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/lightGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_number"
            android:textColor="@color/lightGray"
            android:textSize="16sp"
            app:fontFamily="@font/source_sans_pro_regular_family" />

        <TextView
            android:id="@+id/tv_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/lightGray"
            android:textSize="16sp"
            app:fontFamily="@font/source_sans_pro_regular_family" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/lightGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hd_path"
            android:textColor="@color/blueGrayFirstTextColor"
            android:textSize="16sp"
            app:fontFamily="@font/source_sans_pro_regular_family" />

        <TextView
            android:id="@+id/tv_hd_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/blueGrayFirstTextColor"
            android:textSize="16sp"
            app:fontFamily="@font/source_sans_pro_regular_family" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/lightGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_keys"
            android:textColor="@color/blueGrayFirstTextColor"
            android:textSize="16sp"
            app:fontFamily="@font/source_sans_pro_regular_family" />

        <TextView
            android:id="@+id/tv_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/blueGrayFirstTextColor"
            android:textSize="16sp"
            app:fontFamily="@font/source_sans_pro_regular_family" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/lightGray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/setting"
        android:textColor="@color/darkBlueTextColor"
        android:textSize="18sp"
        app:fontFamily="@font/source_sans_pro_regular_family" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hide_this_account"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="18sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/account_balance_will_be_ignored"
                android:textColor="@color/lightGray"
                android:textSize="16sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_hide_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_account"
                android:textColor="@color/blueGrayFirstTextColor"
                android:textSize="18sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/default_account_info"
                android:textColor="@color/lightGray"
                android:textSize="16sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_default_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>