<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:text="Setting up Decred Wallet"
        android:textSize="18sp"
        android:textColor="#091440"
        android:id="@+id/header"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write down this seed phrase and save it in a secure location. You will be asked to enter it on the next screen and if you ever need to restore your wallet."
        android:textColor="#596D81"
        android:padding="8dp"
        android:layout_below="@+id/header"
        android:textSize="14sp"
        android:id="@+id/subheader"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subheader"
        android:layout_above="@+id/warningf"
        android:layout_marginBottom="5dp"
        android:fadeScrollbars="true"
        >
        <com.dcrandroid.view.SeedLayout
            android:padding="8dp"
            android:id="@+id/seedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="350dp"

            />
    </ScrollView>

    <LinearLayout
        android:id="@+id/warningf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_above="@+id/save_seed_btn_continue"
        android:layout_marginBottom="18dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/warning_save_seed"
            android:textColor="#fd714a"
            android:textSize="14sp"

            />
    </LinearLayout>
    <Button
        android:id="@+id/save_seed_btn_continue"
        android:layout_width="232dp"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_shape"
        android:text="I copied the seed Phrase"
        android:layout_gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="25dp"

        android:textColor="@android:color/background_light" />
</RelativeLayout>