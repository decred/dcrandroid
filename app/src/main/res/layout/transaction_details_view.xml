<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true"
    tools:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="8dp"
                    android:text="@string/date"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

                <TextView
                    android:id="@+id/tx_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="8dp"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular"
                    tools:text="test text" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGreyBackgroundColor" />

            <LinearLayout
                android:id="@+id/status_tx_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:text="@string/status"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

                <TextView
                    android:id="@+id/tx_dts__status"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/tx_status_confirmed"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/confirmed"
                    android:textColor="@color/greenLightTextColor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGreyBackgroundColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/amount_dcr"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

                <TextView
                    android:id="@+id/tx_dts_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/_0_dcr"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16.8sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGreyBackgroundColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_tx_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/fee"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

                <TextView
                    android:id="@+id/tx_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="8dp"
                    android:text="@string/_0_dcr"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16.8sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGreyBackgroundColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_txtype"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/type"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

                <TextView
                    android:id="@+id/txtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular"
                    tools:text="test text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGreyBackgroundColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_confirmation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/confirmations"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

                <TextView
                    android:id="@+id/tx_dts_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="8dp"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular"
                    tools:text="test text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGreyBackgroundColor" />

            <LinearLayout
                android:id="@+id/tx_dts_vote_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/last_block_valid"
                        android:textColor="@color/darkBlueTextColor"
                        android:textSize="16sp"
                        app:fontFamily="@font/source_sans_pro_regular" />

                    <TextView
                        android:id="@+id/tx_dts_block_valid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textColor="@color/darkBlueTextColor"
                        android:textSize="16sp"
                        app:fontFamily="@font/source_sans_pro_regular"
                        tools:text="test text" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGreyBackgroundColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/version"
                        android:textColor="@color/darkBlueTextColor"
                        android:textSize="16sp"
                        app:fontFamily="@font/source_sans_pro_regular" />

                    <TextView
                        android:id="@+id/tx_dts_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textColor="@color/darkBlueTextColor"
                        android:textSize="16sp"
                        app:fontFamily="@font/source_sans_pro_regular"
                        tools:text="test text" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGreyBackgroundColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/vote_bits"
                        android:textColor="@color/darkBlueTextColor"
                        android:textSize="16sp"
                        app:fontFamily="@font/source_sans_pro_regular" />

                    <TextView
                        android:id="@+id/tx_dts_vote_bits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textColor="@color/darkBlueTextColor"
                        android:textSize="16sp"
                        app:fontFamily="@font/source_sans_pro_regular"
                        tools:text="test text" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGreyBackgroundColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_tx_hash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/hash"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular" />

                <TextView
                    android:id="@+id/tx_hash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:ellipsize="middle"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/blueLinkTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/source_sans_pro_regular"
                    tools:text="fxfxffxxfxfxfxfxfhioooiionoinoxfxfxfxjjp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGreyBackgroundColor" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <LinearLayout
                android:id="@+id/llInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/inputs"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/roboto_regular" />


                <ListView
                    android:id="@+id/lvInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:isScrollContainer="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scrollbars="none" />

                <View
                    android:id="@+id/separator1444"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/lightGreyBackgroundColor" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llInput"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/outputs"
                    android:textColor="@color/darkBlueTextColor"
                    android:textSize="16sp"
                    app:fontFamily="@font/roboto_regular" />

                <ListView
                    android:id="@+id/lvOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:isScrollContainer="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scrollbars="none" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>