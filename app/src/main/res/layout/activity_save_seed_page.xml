<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarSeedActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/baseline_arrow_back_black_18dp" />

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/setting_up_your_wallet"
            android:textColor="@color/auth_text_color"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarSeedActivity"
        android:fontFamily="@font/source_sans_pro_regular"
        android:paddingHorizontal="17dp"
        android:text="Write down this seed phrase and save it in a secure location. You will be asked to enter it on the next screen and if you ever need to restore your wallet."
        android:textColor="@color/auth_text_color_description"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvWarning"
        android:layout_below="@+id/subheader"
        android:layout_marginBottom="5dp"
        android:fadeScrollbars="true"
        android:paddingHorizontal="17dp">

        <com.dcrandroid.view.SeedLayout
            android:id="@+id/seedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@color/colorPrimary"
            android:minHeight="350dp" />

    </ScrollView>

