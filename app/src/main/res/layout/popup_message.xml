<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false"
    android:paddingTop="6dp"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/margin_padding_size_18"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="@dimen/margin_padding_size_12"
        android:layout_height="@dimen/margin_padding_size_12"
        android:layout_marginEnd="@dimen/margin_padding_size_12"
        android:layout_marginTop="-4dp"
        android:layout_alignParentEnd="true"
        android:rotation="45"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/margin_padding_size_12"
        android:background="@drawable/blue_ripple_corners_8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popup_text"
            android:textSize="@dimen/edit_text_size_14"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/white"
            tools:text="@string/privacy_popup_message" />

    </LinearLayout>

</RelativeLayout>