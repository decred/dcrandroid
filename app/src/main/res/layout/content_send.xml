<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_funds"
            android:gravity="center"
            android:textSize="21sp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/input_or_scan_the_destination_transactionfee_and_the_amount_in_dcr_to_send_fund"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:gravity="right"
                android:padding="5dp"
                android:background="@color/backgcolorwhite"
                android:textSize="16sp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:background="@drawable/background_shadow">

                <Spinner
                    android:id="@+id/send_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/nav_item_activity_titles"
                    android:layout_marginRight="-10dp"
                    android:layout_marginEnd="-10dp"
                     >
                </Spinner>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="4"
                android:background="@color/backgcolorwhite"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/send_dcr_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/destination_address"
                android:maxLines="1"
                android:layout_weight="1"
                android:inputType="text"
                />

            <ImageView
                android:id="@+id/send_dcr_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tx_status_pending"
                android:src="@drawable/ic_menu_camera"
                android:clickable="true"
                android:focusable="true"
                android:gravity="bottom"
                android:contentDescription="@string/scan"
                android:layout_marginTop="5dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/send_dcr_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/amount_dcr"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:text="0"
            />
        <TextView
            android:id="@+id/send_dcr_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:focusable="true"
            android:textStyle="bold"
            android:padding="5dp"
            android:paddingBottom="3dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_amount_sending"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_0_00_dcr"
                android:id="@+id/send_dcr_total_amt_sndng"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/estimated_fee"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_0_00_dcr"
                android:id="@+id/send_dcr_estimate_fee"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/estimate_size"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_0_bytes"
                android:id="@+id/send_dcr_estimate_size"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/send_btn_tx"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:padding="5dp"
            android:text="@string/send"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</LinearLayout>