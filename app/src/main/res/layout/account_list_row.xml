<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/account_row_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:textColor="@color/Amount2Text"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_row_total"
                app:fontFamily="@font/inconsolata_regular_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:gravity="end"
                android:textColor="@color/Amount1Text"
                android:textSize="16sp"
                android:text="33.33"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"
                    android:text="@string/label_spendable"
                    />
                <TextView
                    android:id="@+id/account_row_spendable"
                    app:fontFamily="@font/inconsolata_regular_family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.33"
                    android:textColor="@color/Amount1Text"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>