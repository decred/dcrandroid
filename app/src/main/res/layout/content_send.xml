<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingBottom="10dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/sending_decred"
            android:textColor="#0C1E3E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/input_or_scan_the_destination_transactionfee_and_the_amount_in_dcr_to_send_fund"
            android:textColor="#617386"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:gravity="end"
                android:text="@string/from"
                android:textColor="@color/secondaryTextColor87"
                android:textSize="16sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/send_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="-7dp"
                    android:layout_marginRight="-7dp"
                    android:entries="@array/nav_item_activity_titles"
                    android:gravity="start">

                </Spinner>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="1dp"
            android:background="#D0D1D1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/send_dcr_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4F6F6"
                android:hint="@string/destination_address"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="3dp"
                android:paddingTop="8dp"
                android:textColor="@color/linkTxtColor"
                android:textColorHint="@color/secondaryTextColor38"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/send_dcr_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:clickable="true"
                android:contentDescription="@string/scan"
                android:focusable="true"
                android:padding="4dp"
                android:src="@mipmap/icons8_qr_code" />

        </LinearLayout>

        <View
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D1D1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="30.5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:gravity="center"
                    android:text="@string/send_in_dcr"
                    android:textColor="@color/secondaryTextColor38"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/equivalent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="30.5dp"
                    android:layout_below="@id/amount_tv"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:gravity="center"
                    android:text="@string/send_in_usd"
                    android:textColor="@color/secondaryTextColor38"
                    android:textSize="16sp"
                    android:visibility="visible" />


                <EditText
                    android:id="@+id/send_dcr_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:textColor="@color/auth_text_color"
                    android:textSize="16sp"
                    app:fontFamily="@font/inconsolata_regular_family" />

                <EditText
                    android:id="@+id/send_exchange_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/send_dcr_amount"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:textColor="@color/auth_text_color"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:fontFamily="@font/inconsolata_regular_family" />

                <TextView
                    android:id="@+id/tvDCR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/send_dcr_amount"
                    android:layout_toRightOf="@id/send_dcr_amount"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:gravity="center"
                    android:text="@string/dcr"
                    android:textColor="@color/auth_text_color"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/send_exchange_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/send_dcr_amount"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/send_exchange_amount"
                    android:layout_toRightOf="@id/send_exchange_amount"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:gravity="center"
                    android:text="@string/usd"
                    android:textColor="@color/auth_text_color"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible" />


            </RelativeLayout>

            <TextView
                android:id="@+id/send_dcr_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/max"
                android:textColor="@color/secondaryTextColor54"
                android:textSize="14sp"

                />
        </LinearLayout>

        <View
            android:id="@+id/border3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D1D1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/send_error_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingEnd="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:gravity="start"
                    android:text="@string/total_sending"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTotalSending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="@string/_0_00_dcr"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:gravity="start"
                    android:text="@string/fee"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/send_dcr_estimate_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="@string/_0_00_dcr"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:gravity="start"
                    android:text="@string/estimate_size"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/send_dcr_estimate_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="@string/_0_bytes"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Balance Remaining:"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/send_dcr_balance_remain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp"
                    app:fontFamily="@font/inconsolata_regular_family" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/exchange_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Exchange Rate:"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/send_dcr_exchange_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/rate_unavailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bittrex rate unavailable (tap to retry)"
                android:textColor="#ff0004"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/send_btn_tx"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_shape1"
            android:text="@string/send"
            android:textColor="@color/black38"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>