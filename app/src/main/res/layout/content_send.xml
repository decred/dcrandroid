<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_funds"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:textColor="@color/bacgroundColor"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/secondaryTextColor"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="8dp"
            android:text="@string/input_or_scan_the_destination_transactionfee_and_the_amount_in_dcr_to_send_fund"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:textColor="@color/secondaryTextColor"
                android:gravity="end"
                android:padding="5dp"
                android:background="@color/backgcolorwhite"
                android:textSize="16sp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:background="@drawable/background_shadow">

                <Spinner
                    android:id="@+id/send_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/nav_item_activity_titles"
                    android:layout_marginRight="-10dp"
                    android:layout_marginEnd="-10dp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    >
                </Spinner>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/backgcolorwhite"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp">

            <EditText
                android:id="@+id/send_dcr_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/destination_address"
                android:maxLines="1"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="15sp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/secondaryTextColor"
                />

            <ImageView
                android:id="@+id/send_dcr_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icons8_qr_code"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:gravity="bottom"
                android:layout_gravity="center"
                android:contentDescription="@string/scan"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_currency_display"
                    />

                <com.dcrandroid.util.BlockedSelectionEditText
                    android:id="@+id/send_dcr_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/amount_dcr"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/send_dcr_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max"
                android:clickable="true"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:focusable="true"
                android:textStyle="bold"
                android:padding="5dp"
                android:paddingBottom="3dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingEnd="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingStart="10dp"
                android:id="@+id/send_error_label"
                android:textColor="?attr/colorError" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/exchange_details"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Exchange Currency"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textColor="@color/secondaryTextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_dcr_exchange_currency"
                    android:textSize="15sp"
                    android:text="-"
                    android:textColor="@color/secondaryTextColor"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Exchange Rate"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textColor="@color/secondaryTextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_dcr_exchange_rate"
                    android:textSize="15sp"
                    android:text="-"
                    android:textColor="@color/secondaryTextColor"
                    />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total_amount_sending"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textColor="@color/secondaryTextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_dcr_total_amt_sndng"
                    android:textSize="15sp"
                    android:text="-"
                    android:textColor="@color/secondaryTextColor"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/estimated_fee"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textColor="@color/secondaryTextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/send_dcr_estimate_fee"
                    android:textColor="@color/secondaryTextColor"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/estimate_size"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textColor="@color/secondaryTextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_dcr_estimate_size"
                    android:textSize="15sp"
                    android:text="-"
                    android:textColor="@color/secondaryTextColor"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/send_btn_tx"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:padding="5dp"
            android:text="@string/send"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:id="@+id/send_btn_convert"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:padding="5dp"
            android:text="Convert Currency"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_margin="8dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</LinearLayout>