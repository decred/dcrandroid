<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f4f5f7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_password"
            android:background="?selectableItemBackground"
            android:layout_weight="49.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_password"
                android:text="@string/password"
                android:textColor="#4e5f70"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />

            <View
                android:id="@+id/password_bottom_border"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#4e5f70" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="49.5"
            android:background="?selectableItemBackground"
            android:id="@+id/layout_pin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_pin"
                android:text="@string/pin"
                android:textColor="#a4abb1"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                app:fontFamily="@font/source_sans_pro_regular_family" />

            <View
                android:id="@+id/pin_bottom_border"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#4e5f70"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:visibility="visible" />
</LinearLayout>