<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EDEFF1"
    android:gravity="center_horizontal|bottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Security PIN"
        android:textColor="#091440"
        android:textSize="25sp"
        app:fontFamily="@font/source_sans_pro_regular_family"
        android:layout_marginBottom="20dp"
        android:id="@+id/keypad_instruction"
        />

    <com.dcrandroid.view.PinView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:pin_count="5"
        android:id="@+id/keypad_pin_view"
        android:layout_marginBottom="40dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:id="@+id/keypad"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keypad_1"
                android:text="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_circle"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />


            <TextView
                android:id="@+id/keypad_2"
                android:text="2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/keypad_3"
                android:text="3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keypad_4"
                android:text="4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/keypad_5"
                android:text="5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/keypad_6"
                android:text="6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keypad_7"
                android:text="7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/keypad_8"
                android:text="8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/keypad_9"
                android:text="9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keypad_0"
                android:text="0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_circle"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/keypad_del"
                android:text="@string/erase_char"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#48566E"
                app:fontFamily="@font/source_sans_pro_regular_family"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>