<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlButtons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/tvCorrectWordNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/darkBlueTextColor"
        tools:text="Correct Word #3" />

    <LinearLayout
        android:id="@+id/llSeedWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCorrectWordNumber"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/tvFirstSeed"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="30"
            android:background="@drawable/btn_shape4"
            android:textAllCaps="false"
            android:textColor="@color/blueSecondDrawableColor"
            android:textSize="14sp"
            tools:text="consensus" />

        <Button
            android:id="@+id/tvSecondSeed"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="30"
            android:background="@drawable/btn_shape4"
            android:textAllCaps="false"
            android:textColor="@color/blueSecondDrawableColor"
            android:textSize="14sp"
            tools:text="playhouse" />

        <Button
            android:id="@+id/tvThirdSeed"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="30"
            android:background="@drawable/btn_shape4"
            android:textAllCaps="false"
            android:textColor="@color/blueSecondDrawableColor"
            android:textSize="14sp"
            tools:text="klaxon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/llSeedWords"
        android:layout_marginTop="5dp"
        android:background="@color/lightGreyBackgroundColor" />

</RelativeLayout>