<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/setting_up_decred_wallet"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#fff" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/save_seed_instruction"
            android:textColor="#fff"
            />
        <View
            android:id="@+id/separator21"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/primary_text" />

        <com.dcrandroid.util.MyCustomTextView
            android:id="@+id/save_seed_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="5dp"
            android:text="parargon  tritor school major"
            android:textColor="#000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_error"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/border_error">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/warning"

                android:layout_gravity="center"/>
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/warninf_save_seed"
            android:padding="5dp"
            android:layout_weight="0.2"
            android:textColor="@color/button2Color"
            android:textSize="13sp"
           />
        </LinearLayout>

        <Button
            android:id="@+id/save_seed_btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape2"
            android:text="@string/i_copied_the_seed_phrase"
            android:layout_gravity="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</RelativeLayout>