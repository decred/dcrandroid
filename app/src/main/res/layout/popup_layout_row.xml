<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/wallets_menu_width"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ripple"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/margin_padding_size_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_text"
        tools:text="Rename"
        android:textSize="@dimen/edit_text_size_16"
        android:textColor="@color/darkBlueTextColor"
        android:fontFamily="@font/source_sans_pro" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_badge"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:textSize="10sp"
        android:visibility="visible"
        android:textColor="@color/white"
        android:text="@string/new_caps"
        android:background="@color/blue"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/margin_padding_size_2"
        android:paddingEnd="@dimen/margin_padding_size_2"
        />

</RelativeLayout>